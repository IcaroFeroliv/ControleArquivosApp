<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleArquivosApp.MainPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray950}">

    <ScrollView>
        <VerticalStackLayout Padding="0">
            <!-- HEADER -->
            <Grid Padding="25"
                BackgroundColor="{StaticResource Gray950}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- TÍTULO À ESQUERDA -->
                <Label Text="Controle de Arquivos"
                       FontSize="50"
                       FontAttributes="Bold"
                       FontFamily="Empty"
                       TextColor="{StaticResource White}"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"
                       Grid.Column="0" 
                       Margin="100,10,0,10"
                       />   

                <!-- LOGO À DIREITA -->
                <Image Source="logodark.png"
                       HeightRequest="150"
                       Aspect="AspectFit"
                       HorizontalOptions="End"
                       VerticalOptions="Center"
                       Grid.Column="1"
                       Margin="0,50,150,0"/>
            </Grid>

            <Grid ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Campo 1: Responsável -->
                <VerticalStackLayout Grid.Column="0">
                    <Label  Text="Responsável"
                            TextColor="{StaticResource White}" 
                            Margin="26,0,0,1"/>
                    <Entry Text="{Binding Responsavel}"
                           BackgroundColor="{StaticResource Gray600}"
                           TextColor="{StaticResource White}"
                           Placeholder="Digite o responsável" 
                           Margin="25,1,0,0"
                           />
                </VerticalStackLayout>

                <!-- Campo 2: Caminho -->
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Arquivo"
                           TextColor="{StaticResource White}"
                           Margin="1,0,0,0"
                           />
                    <Picker 
                            ItemsSource="{Binding TipoArquivo}"
                            SelectedItem="{Binding OpcaoSelecionadaArquivo}"
                            TextColor="{StaticResource White}"
                            BackgroundColor="{StaticResource Gray600}"
                            Margin="0,1,25,0"
                            />

                </VerticalStackLayout>
            </Grid>

            <Grid ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="250" />

                </Grid.ColumnDefinitions>

                <!-- Campo 1: Fase-->
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Fase"
                           TextColor="{StaticResource White}"
                           Margin="26,5,0,0"
                       />
                    <Picker 
                        ItemsSource="{Binding TipoFase}"
                        SelectedItem="{Binding OpcaoSelecionadaFase}"
                        TextColor="{StaticResource White}"
                        BackgroundColor="{StaticResource Gray600}"
                        Margin="25,1,0,0"
                        />
                </VerticalStackLayout>
                <!-- Campo 2: Discplina-->
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Disciplina"
                           TextColor="{StaticResource White}"
                           Margin="1,5,0,0"
                       />
                    <Picker 
                        ItemsSource="{Binding TiposDisciplinas}"
                        ItemDisplayBinding="{Binding DescricaoDisciplina}"
                        SelectedItem="{Binding OpcaoSelecionadaDisciplina}"
                        TextColor="{StaticResource White}"
                        BackgroundColor="{StaticResource Gray600}"
                        Margin="0,1,0,0"
                    />

                </VerticalStackLayout>

                <!-- Campo 3: Revisão/Versão-->
                <VerticalStackLayout Grid.Column="2">
                    <Label  Text="Revisão"
                            TextColor="{StaticResource White}" 
                            Margin="1,5,0,0"/>

                    <Entry  Text="{Binding NumeroVersao, Mode=TwoWay}"
                            Placeholder="01"
                            Keyboard="Numeric"
                            TextColor="White"
                            BackgroundColor="{StaticResource Gray600}"
                            Margin="0,1,0,0"/>

                </VerticalStackLayout>

                <!-- Campo 4: Quantidade de Arquivo-->
                <VerticalStackLayout Grid.Column="3">
                    <Label  Text="Quantidade de Arquivo"
                            TextColor="{StaticResource White}" 
                            Margin="1,5,0,0"/>

                    <Entry  Text="{Binding NumeroArquivo, Mode=TwoWay}"
                            Placeholder="01"
                            Keyboard="Numeric"
                            TextColor="White"
                            BackgroundColor="{StaticResource Gray600}"
                            Margin="0,1,25,0"/>

                </VerticalStackLayout>

            </Grid>



            <Grid ColumnSpacing="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Column="0">
                    <Label  Text="Tarefa"
                            TextColor="{StaticResource White}"
                            Margin="26,5,0,0"
                        />
                    <Picker
                            ItemsSource="{Binding Tarefas}"
                            ItemDisplayBinding="{Binding SiglaTarefa}"
                            SelectedItem="{Binding OpcaoSelecionadaTarefa}"
                            BackgroundColor="{StaticResource Gray600}"
                            TextColor="White" 
                            Margin="25,1,0,0"/>


                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1">
                    <Label  Text="Descrição"
                            TextColor="{StaticResource White}"
                            Margin="0,5,0,0"
                        />
                    <Picker
                            ItemsSource="{Binding Descricoes}"
                            ItemDisplayBinding="{Binding DescricaoDisciplina}"
                            SelectedItem="{Binding OpcaoSelecionadaDescricao}"
                            BackgroundColor="{StaticResource Gray600}"
                            TextColor="White" 
                            Margin="0,1,25,0"/>

                </VerticalStackLayout>
            
            
            
            
            
            
            </Grid>





            <Button Text="Avançar"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    CornerRadius="8"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
